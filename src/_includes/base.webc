<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="color-scheme" content="light dark">

	<link rel="canonical" :href="'https://nexspring.ca' + page.url">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link webc:keep
		href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
		rel="stylesheet">
	<link webc:keep
		href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=IBM+Plex+Sans:ital,wght@0,100..700;1,100..700&family=IBM+Plex+Serif:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
		rel="stylesheet">

	<style>
		@layer color {
			:root {
				--bg-color: hsl(0 0% 100%);
				--color: hsl(220 20% 10%);

				--primary: hsl(220 60% 15%);
				--fg-primary: hsl(0 0% 98%);

				--secondary: hsl(220 15% 92%);
				--fg-secondary: hsl(220 20% 10%);

				--muted: hsl(220 10% 94%);
				--fg-muted: hsl(220 10% 45%);

				--accent: hsl(215 90% 50%);
				--fg-accent: hsl(0 0% 100%);

				--grid-line: hsl(220 15% 90%);
				--shadow: hsl(220 15% 90%);
			}

			@media only screen and (prefers-color-scheme: dark) {
				:root {
					--bg-color: hsl(220 40% 20%);
					--color: hsl(0 0% 95%);

					--primary: hsl(0 0% 95%);
					--fg-primary: hsl(220 20% 8%);

					--secondary: hsl(220 15% 18%);
					--fg-secondary: hsl(0 0% 95%);

					--muted: hsl(220 15% 18%);
					--fg-muted: hsl(220 10% 60%);

					--accent: color-mix(in hsl, hsl(215 90% 50%), gray);
					--fg-accent: hsl(0 0% 100%);

					--destructive: hsl(0 62% 30%);
					--fg-destructive: hsl(0 75% 50%);

					--grid-line: hsl(220 40% 30%);
					--shadow: hsl(220 40% 15%);
				}
			}

			@layer base {
				:root {
					--font-head: 'JetBrains Mono', monospaced;
					--font-body: 'IBM Plex Sans', Georgia, serif;
          --content-width: 60rem;
				}

				html {
					scroll-behavior: smooth;
					scroll-padding-top: calc(var(--header-height) + 3rem);
				}

				body {
					margin: 0;
					padding: 0;

					font-family: var(--font-body);

					background-color: var(--bg-color);
					color: var(--color);
				}

				nav,
				h1,
				h2,
				h3,
				h4,
				h5,
				h6,
				p,
				ul,
				ol,
				figure,
				card-grid,
				figure {
					max-width: var(--content-width);
					margin-left: auto;
					margin-right: auto;
					margin-bottom: 1rem;
					padding: 0 1rem;
				}

				h1,
				h2 {
					margin-top: 6rem;
				}

				h3,
				h4 {
					margin-top: 3rem;
				}

				h5,
				h6,
				p,
				ul,
				ol,
				figure,
				card-grid,
				figure {
					margin-top: 1rem;
				}

				ul,
				ol {
					padding: 0;
				}

				body>main {
					padding-bottom: 50vh;
					flex: 1 1 auto;
				}

				img {
					max-width: 100%;
					height: auto;
					border-radius: 16px;
					corner-shape: squircle;
				}

				figure img {
					width: 100%;
				}

				header * {
					font-family: var(--font-head);
				}

				p {
					text-align: justify;
				}

				.copy {
					font-size: small;
					color: var(--fg-muted);
				}

				logo {
					font-size: large;
				}

				h1,
				h2,
				h3,
				h4,
				h5,
				h6 {
					font-family: var(--font-head);
				}

				h1 {
					font-size: 32pt;
					text-transform: capitalize;
				}

				h2 {
					font-size: x-large;
				}

				h3 {
					font-size: large;
				}

				hr {
					margin: 6rem 0;
				}

				a {
					color: var(--color);
				}
			}
		}
	</style>
	<style webc:keep @raw="getBundle('css')"></style>
	<script webc:keep @raw="getBundle('js')"></script>

	<title @text="title"></title>

	<template webc:nokeep webc:if="ghost">
		{{ ghost_head }}
	</template>
</head>

<body @raw="content"></body>

</html>
