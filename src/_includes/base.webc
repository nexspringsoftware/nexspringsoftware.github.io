<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="color-scheme" content="light dark">

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link webc:keep
		href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
		rel="stylesheet">
	<link rel="stylesheet" href="/styles.css">
	<link webc:if="ghost" rel="stylesheet" href="/ghost.css">
	<style>
		nav ul {
			font-size: medium;

			margin: 0;
			display: flex;
			gap: 1rem;
			list-style: none;

			>:last-child a {
				background-color: var(--bg-color);
				border-style: solid;
				border-width: 1pt;
				border-color: var(--color);
				color: var(--color);
				padding: 0.3rem;
				text-transform: uppercase;
				font-family: inherit;
				font-weight: bolder;
				font-size: inherit;
				cursor: pointer;
				text-decoration: unset;
			}
		}

		main,
		article {
			>header {
				>:first-child {
					margin-top: 4rem;
				}

				>:last-child {
					margin-bottom: 4rem;
				}

				span {
					background-color: var(--bg-color);
				}

				box-shadow: var(--shadow) 0px 0px 16px;
				background-image: linear-gradient(var(--grid-line) 1px, transparent 1px),
				linear-gradient(90deg, var(--grid-line) 1px, transparent 1px);
				background-size: 3.333rem 3.333rem;
				background-position: 50% 0;
				padding: 1rem 0;
				margin: 1rem 0;
			}
		}

		@media (width < 768px) {
			nav ul {
				font-size: small;
			}
		}
	</style>

	<style webc:keep @raw="getBundle('css')"></style>
	<script webc:keep @raw="getBundle('js')"></script>

	<title @text="title"></title>

	<template webc:nokeep webc:if="ghost">
		{{ ghost_head }}
	</template>
</head>

<body :class="ghost ? '{{ body_class }}' : ''">
	<header>
		<nav>
			<a href="/#top">
				<logo @text="site"></logo>
			</a>
			<template webc:nokeep webc:if="ghost">
				{{ navigation }}
			</template>
			<ul webc:else>
				<li><a href="https://journal.nexspring.ca">articles</a></li>
				<li><a href="#about">about</a></li>
				<li><a href="#team">team</a></li>
				<li><a href="#contact">contact</a></li>
			</ul>
		</nav>
	</header>

	<main @raw="content"></main>

	<footer>
		<span class="copy">Copyright &copy; 2026 NexSpring Software Inc.</span>
	</footer>

	<template webc:nokeep webc:if="ghost">
		{{ ghost_foot }}
	</template>
</body>

</html>
