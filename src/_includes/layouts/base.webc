<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="color-scheme" content="light dark">

	<title>NexSpring Software</title>

	<script webc:keep type="module" @raw="getBundle('js')"></script>

	<style webc:keep @raw="getBundle('css')"></style>
	<style webc:keep>
		@import url("https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Merriweather:ital,opsz,wght@0,18..144,300..900;1,18..144,300..900&display=swap");
		@import url("/colors.css");

		@layer decoration {
			body {
				background-image: linear-gradient(var(--grid-line) 1px, transparent 1px), linear-gradient(90deg, var(--grid-line) 1px, transparent 1px);
				background-size: 3.333rem 3.333rem;
				background-position: 50% 0;

				:not(box) span {
					background-color: var(--bg-color);
				}

				a {
					color: var(--color);
				}

				header {
					background-color: var(--bg-color);
					box-shadow: var(--grid-line) 0px 0px 5px;
				}

				footer {
					background-color: var(--bg-color);
					border-bottom: 1px solid var(--grid-line);
				}
			}

		}

		@layer layout {
			:root {
				--header-height: 4rem;
			}

			html {
				scroll-behavior: smooth;
				scroll-padding-top: calc(var(--header-height) + 3rem);
			}

			body {
				margin: 0;
				display: flex;
				flex-direction: column;
				min-height: 100vh;
				box-sizing: border-box;
				padding-top: var(--header-height);

				header {
					height: var(--header-height);
					position: fixed;
					top: 0;
					left: 0;
					right: 0;
					padding: 0 1rem;
				}

				nav {
					height: 100%;
					align-self: stretch;
					display: flex;
					justify-content: space-between;
					align-items: center;
				}

				nav,
				section>*,
				box {
					max-width: 60rem;
					margin-left: auto;
					margin-right: auto;
				}

				section {
					margin: auto 1rem;
				}

				main {
					padding-bottom: 50vh;
					flex: 1 1 auto;

					>* {
						margin-top: 3rem;
						margin-bottom: 3rem;
					}
				}

			}

		}

		nav ul {
			display: flex;
			gap: 1rem;
			list-style: none;

			li a.boxed {
				background-color: var(--bg-color);
				border-style: solid;
				border-width: 1pt;
				border-color: var(--color);
				color: var(--color);
				padding: 0.5rem;
				text-transform: uppercase;
				font-family: inherit;
				font-weight: bolder;
				cursor: pointer;
				text-decoration: unset;
			}
		}

		body {
			font-family: 'JetBrains Mono', monospace;
			background-color: var(--bg-color);
			color: var(--color);
		}

		h1 {
			font-size: larger;
			font-weight: bolder;
			display: inline-flex;
			align-items: center;
			color: var(--color);
			text-decoration: none;
			gap: 0.5rem;

			&::before {
				content: "";
				background-color: var(--accent);
				width: 0.5rem;
				height: 0.5rem;
				flex: 1 0 auto;
			}
		}

		p {
			text-align: left;
		}

		.copy {
			font-size: smaller;
			color: var(--fg-muted);
		}

		.hero {
			h2 {
				font-size: 32pt;
				text-transform: capitalize;
			}
		}
	</style>
</head>

<body>
	<header>
		<nav>
			<a href="/#top">
				<h1>NexSpring Software</h1>
			</a>
			<ul>
				<li><a href="#about">About</a></li>
				<li><a href="#team">Team</a></li>
				<li><a class="boxed" href="#contact">Contact</a></li>
			</ul>
		</nav>
	</header>

	<main class="container" @raw="content"></main>

	<footer>
		<span class="copy">Copyright &copy; 2025 NexSpring Software Inc.</span>
	</footer>
</body>

</html>
