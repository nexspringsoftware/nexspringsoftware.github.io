<header>
	<h1><span>{{@site.title}}</span></h1>
	<p><span>{{@site.description}}</span></p>
</header>

<h2>Articles</h2>
<card-grid>
	{{#foreach posts}}
	<card-item>
		<ghost-feature-image></ghost-feature-image>
		<h3><a href="{{url}}">{{title}}</a></h3>
		<p>{{excerpt}}</p>
	</card-item>
	{{/foreach}}
</card-grid>
